html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")

        link(rel="stylesheet" href="../styles/styles.css")
        title Alvin Cousins | Project
        //- script(type="module" src="portfolio.js")
        link(rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png")
        link(rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png")
        link(rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png")
        link(rel="manifest" href="/site.webmanifest")
        
    body

        //- div(class="canvas")
        //-     div(class="content")
        //-         div(class="content__main")
                    //- h1(class="side-heading") PROJECT

        div(class="sun")
            a(href="/")
                img(class="content__sun-col__sun" src="../images/sun_02.svg")
            a(href="/portfolio")
                h4 PORTFOLIO
            a(href="/about")
                h4 ABOUT 
            a(href="/contact")
                h4 CONTACT


        div(class="layout-1")
            div(class="layout-1__left") 
                img(class="content__apps-grid__icon" src=`.${project.icon}`)
                h1(class="layout-1__title") #{project.title}
                div(class="layout-1__block-text")
                    each paragraph in project.explanation
                        p(class="paragraphs__string") #{paragraph}
                br
                div(class="layout-1__block-text")
                    span(class="label") Links: 
                    br
                    span(class="item")
                        a(href=project.links.live target="_blank") Live 
                        span #{"| "}
                            a(href=project.links.code target="_blank") Code 
                        if project.links.video
                            span #{"| "}
                                a(href=project.links.video target="_blank") Video 
                    br
                    br
                    span(class="label") Technologies: 
                    br
                    span(class="item")
                        each tech, index in project.stack 
                            span #{tech}#{index === project.stack.length - 1 ? "." : ", " }

            div(class="layout-1__right") 
                img(class="layout-1__img" src=`../images/projects/${project.images[0]}`)
                img(class="layout-1__img" src=`../images/projects/${project.images[1]}`)


        div(class="content__apps-grid__footer-wrapper")
            div(class="content__apps-grid__footer-wrapper__footer")
                each project in projects.data 
                    div(class="content__apps-grid__item")
                        a(href=`${project.id}`)
                            img(class="content__apps-grid__icon" src=`.${project.icon}`)
                            div(class="content__apps-grid__title") #{project.title}
        h1(class="side-heading") PORTFOLIO
                
       
        
        input(id="data" type="hidden" value=projects)
        
    
