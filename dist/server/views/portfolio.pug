html(lang="en")
    include head.pug
        title Alvin Cousins | Portfolio
    body

        //- div(class="canvas")

        div(class="content")
            div(class="content__main")
                h1(class="side-heading") PORTFOLIO

                div(class="content__apps-grid__footer-wrapper")
                    div(class="content__apps-grid__footer-wrapper__footer")
                        each project in projects.data 
                            div(class="content__apps-grid__item")
                                a(href=`project/${project.id}`)
                                    img(class="content__apps-grid__icon" src=`.${project.icon}`)
                                    div(class="content__apps-grid__title") #{project.title}

                include sun-nav.pug